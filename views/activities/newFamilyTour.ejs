<% include ../partials/header %>

<div class="container">
    <h1 class="display-3 text-info text-center">Create a family tour</h1>
    <div class="jumbotron mt-4">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form action="/activities/tours" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Enter your activity name" name="tour[title]" required>
                    </div>
                    <div class="form-group">
                        <label for="image">Upload an image</label>
                        <input type="file" id="image" name="image" accept="image/*" class="form-control" required>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-6">
                          <input type="number" class="form-control" id="inputEmail3" placeholder="Min. Members - e.g(5)" name="tour[minimumMembers]" required>
                        </div>
                        <div class="col-sm-6">
                          <input type="number" class="form-control" id="inputEmail3" placeholder="Max. Members - e.g(15)" name="tour[maximumMembers]" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <textarea name="tour[description]" class="form-control" placeholder="Enter Description" rows="3" required></textarea>
                    </div>
                    <button name="submit" class="btn btn-danger btn-lg btn-block">Submit</button>
                </form>
            </div>
        </div> <!-- End row -->
    </div> <!-- End jumbotron -->
</div> <!-- End container -->





<% include ../partials/footer %>