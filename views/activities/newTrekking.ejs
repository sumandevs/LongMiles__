<% include ../partials/header %>

<div class="container">
    <h1 class="display-3 text-info text-center">Create a trekking activity</h1>
    <div class="jumbotron mt-4">
        <div class="row justify-content-center">
            <div class="col-4">
                <form action="/activities/trekkings" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>Activity name:</label>
                        <input type="text" class="form-control" placeholder="Enter your activity name" name="trek[title]">
                    </div>
                     <div class="form-group">
                        <label for="image">Upload an image</label>
                        <input type="file" id="image" name="image" accept="image/*" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <textarea name="trek[description]" class="form-control" placeholder="Enter Description" rows="3"></textarea>
                    </div>
                    <button name="submit" class="btn btn-danger btn-lg btn-block">Submit</button>
                </form>
            </div>
        </div> <!-- End row -->
    </div> <!-- End jumbotron -->
</div> <!-- End container -->





